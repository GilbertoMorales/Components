<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SprintZero.Views.MapsExternal"
             xmlns:ViewModel="clr-namespace:SprintZero.ViewModels;assembly=SprintZero"
             BackgroundImage="mapbackground.jpg">

    <ContentPage.BindingContext>
        <ViewModel:MapsExternalViewModel/>
    </ContentPage.BindingContext>


    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <Button x:Name="ButtonMapsExternal"
                     Command="{Binding CommandMap}"
                Text="External maps" 
                TextColor="White"
                BackgroundColor="Green"
                BorderRadius="0"
                VerticalOptions="EndAndExpand"></Button>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>